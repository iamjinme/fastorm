{
  "name": "fastorm",
  "version": "0.0.1",
  "description": "MySQL ORM for Node.js based on node-mysql2.",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirabalj/fastorm.git"
  },
  "scripts": {
    "pretest": "npm run lint || true",
    "testDebug": "NODE_ENV=test DEBUG=boilerplateModule* mocha",
    "test": "NODE_ENV=test mocha",
    "clean": "rimraf lib && mkdir lib",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "build": "npm run clean && npm run build:module",
    "build:module": "babel -d ./lib ./src -s",
    "postinstall": "npm run build",
    "watch:babel": "babel ./src --watch --out-dir ./lib",
    "commit": "git add . && git-cz"
  },
  "author": "Geek Developers SAS",
  "dependencies": {
    "babel-cli": "6.18.0",
    "babel-preset-node6": "11.0.0",
    "babel-preset-stage-3": "6.17.0",
    "basic-auth": "1.0.4",
    "bluebird": "3.4.6",
    "debug": "2.2.0",
    "dotenv": "2.0.0",
    "lodash": "4.15.0",
    "mysql2": "1.4.2",
    "rimraf": "2.5.4"
  },
  "devDependencies": {
    "arrow-mocha": "1.0.1",
    "babel-eslint": "6.0.4",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "chai-subset": "1.3.0",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "dirty-chai": "1.2.2",
    "eslint": "3.7.1",
    "eslint-config-airbnb-base": "8.0.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-mocha": "4.5.1",
    "mocha": "3.0.2",
    "sinon": "1.17.5",
    "sinon-as-promised": "4.0.2",
    "sinon-mongoose": "1.3.0",
    "timekeeper": "0.1.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
